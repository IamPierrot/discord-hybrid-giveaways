{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "module": "NodeNext",
        "declaration": true,
        "isolatedModules": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "noEmit": true,
        "importsNotUsedAsValues": "remove",
        "noUnusedLocals": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}